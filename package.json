{
  "name": "todo-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=api",
    "dev:client": "npm run dev --workspace=client",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "build": "npm run build --workspace=api && npm run build --workspace=client"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@google/genai": "^1.21.0"
  }
}
